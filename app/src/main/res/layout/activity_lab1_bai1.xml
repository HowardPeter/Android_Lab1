<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ActivityLab1Bai1">

    <TextView
        android:id="@+id/tvRed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".14"
        android:gravity="center"
        android:textColor="#000"
        android:background="#FF0000"
        android:text="RED" />
    <TextView
        android:id="@+id/tvOrange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_weight=".14"
        android:textColor="#000"
        android:background="#FF8C00"
        android:text="ORANGE" />
    <TextView
        android:id="@+id/tvYellow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".14"
        android:gravity="center"
        android:textColor="#000"
        android:background="#FFDD00"
        android:text="YELLOW" />
    <TextView
        android:id="@+id/tvGreen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".14"
        android:gravity="center"
        android:textColor="#000"
        android:background="#6AFF00"
        android:text="GREEN" />
    <TextView
        android:id="@+id/tvBlue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".14"
        android:gravity="center"
        android:textColor="#000"
        android:background="#005EFF"
        android:text="BLUE" />
    <TextView
        android:id="@+id/tvIndigo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".14"
        android:gravity="center"
        android:textColor="#000"
        android:background="#6A00FF"
        android:text="INDIGO" />
    <TextView
        android:id="@+id/tvViolet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".14"
        android:gravity="center"
        android:textColor="#000"
        android:background="#D000FF"
        android:text="VIOLET" />
</LinearLayout>